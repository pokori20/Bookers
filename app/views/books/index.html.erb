<h1>Books</h1>
<table>
  <thread>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thread>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.title %></td>
      <td><a class="show_[:id]" href="/books/[:id]">Show</a></td>
      <td><a class="edit_[:id]" href="/books/[:id]">edit</a></td>
      <td><a data-confirm="Are you sure?" class="destroy[:id]" rel="nofollow data-method"="delete" href=/books/[:id]>Destroy</a></td>
    </tr>
    <% end %>
  </tbody>
</table>
<h2>New book</h2>
<%= form_with model: @book, url:'/books', local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <br>
  <%= f.submit 'Create Book' %>
<% end %>